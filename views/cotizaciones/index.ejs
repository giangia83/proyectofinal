  <main>




    <div class="container">
      <!-- Content here -->



      <div class="table-div">

        <aside>
          <!-- Contenido del sidenav -->
          <nav>

            <ul>

              <li><a href="/html/aprende.html">Gestión de Productos </a></li>
              <p> Agregar, editar y eliminar productos.</p>

              <li><a href="/html/soporte.html">Gestión de Cotizaciones</a></li>
              <p> Visualización y gestión de las solicitudes de cotización recibidas de los clientes.</p>
              <li><a href="/html/about.html">Administración de Clientes</a></li>
              <p> Mantén un registro de los clientes registrados y sus detalles.</p>


            </ul>

          </nav>
        </aside>
      </div>


      <div class="container-right">

        <div class="card">
          <h5 class="card-header">Cotizaciones </h5>
          <div class="card-body">



          
<!-- cotizaciones -->
<div class="accordion" id="accordionCotizaciones">
  <% cotizaciones.forEach((cotizacion, index) => { %>
    <div class="accordion-item">
      <h2 class="accordion-header" id="heading<%= index %>">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= index %>" aria-expanded="true" aria-controls="collapse<%= index %>">
          Cotización por: <%= cotizacion.usuario %>
        </button>
      </h2>
      <div id="collapse<%= index %>" class="accordion-collapse collapse show" aria-labelledby="heading<%= index %>" data-bs-parent="#accordionCotizaciones">
        <div class="accordion-body">
          <h5 class="card-title">Productos:</h5>
          <ul class="list-group">
            <% cotizacion.productos.forEach(producto => { %>
              <li class="list-group-item">
                <%= producto.nombre %> - Precio unitario: <%= producto.precio %> - Cantidad: <%= producto.cantidad %>
              </li>
            <% }) %>
          </ul>
          <p class="card-text">
            <strong>Total de productos:</strong> <%= calcularTotalProductos(cotizacion) %><br>
            <strong>Total de la cotización:</strong> <%= calcularTotalCotizacion(cotizacion) %><br>
            <strong>Porcentaje de ganancia:</strong> <%= calcularPorcentajeGanancia(cotizacion) %>%<br>
            <strong>Estado:</strong> <%= cotizacion.estado %><br>
          </p>
          <form action="/vercotizaciones/verificar/<%= cotizacion._id %>" method="POST">
            <button type="submit" class="btn btn-success">Verificar</button>
          </form>
          <form action="/vercotizaciones/eliminar/<%= cotizacion._id %>" method="POST">
            <button type="submit" class="btn btn-danger">Eliminar</button>
          </form>
          <form action="/usuarios/<%= cotizacion.usuario %>" method="GET">
            <button type="submit" class="btn btn-warning">Ver detalles del usuario</button>
          </form>
        </div>
      </div>
    </div>
  <% }) %>
</div>


<!-- cotizaciones end -->





          </div>
        </div>








        <div class="table-second">

          
          <div class="card">
            <h5 class="card-header">Información</h5>
            <div class="card-body">
                <h5 class="card-title">Presiona <span class="badge bg-success">Verificar</span> para dar por finalizada una cotización exitosa.
                
                <br><br>Presiona <span class="badge bg-danger">Danger</span> para eliminar un cotización permanentemente.
                
                
                
                
                
                
                </h5>
              
               
            </div>
          </div>

          </div>

          <div class="table-third">


                  </div>






              </div>







            </div>


          </div>




        </div>















      </div>
